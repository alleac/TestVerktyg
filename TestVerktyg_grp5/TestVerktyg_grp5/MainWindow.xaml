<Window x:Class="TestVerktyg_grp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestVerktyg_grp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid x:Name="grid_loggedin">
            <TabControl x:Name="tabControl" 
                    HorizontalAlignment="Stretch">
                <TabItem Header="Main">
                    <Grid Background="White"/>
                </TabItem>
                <TabItem Header="Users">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center">
                            <Label HorizontalAlignment="Center" 
                                   FontSize="24" 
                                   Content="Users"
                                   />
                            <ListView Width="400" Height="250" />
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        >
                                <Button Content="New user" 
                                        Margin="10" Width="100" 
                                        Height="20" Click="Button_Click"
                                        />
                                <Button Content="Delete user" 
                                        Margin="10" 
                                        Width="100" 
                                        Height="20"
                                        />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Quizes">
                    <Grid Background="White">
                        <StackPanel HorizontalAlignment="Center">
                            <Label HorizontalAlignment="Center" 
                                   FontSize="24" 
                                   Content="Create new test"/>
                            <StackPanel Margin="0,0,0,10" 
                                        Orientation="Horizontal"
                                        >
                                <StackPanel Margin="20,0,0,0" 
                                            HorizontalAlignment="Left"
                                            >
                                    <Label Padding="0,0,0,5"  
                                           Content="Question:"
                                           />
                                    <TextBox x:Name="jh" 
                                             Width="230" 
                                             />
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Margin="20,0,0,0" 
                                        HorizontalAlignment="Left"
                                        >
                                <Label Padding="0,0,0,5"  
                                       Content="Answer 1:"
                                       />
                                <RadioButton x:Name="j" 
                                             >
                                    <TextBox Width="210" 
                                             />
                                </RadioButton>
                                <Label Padding="0,0,0,5"  
                                       Content="Answer 2:"
                                   />
                                <RadioButton x:Name="d" 
                                             >
                                    <TextBox Width="210"/>
                                </RadioButton>
                                <Label Padding="0,0,0,5"  
                                       Content="Answer 3:"
                                       />
                                <RadioButton x:Name="i" 
                                         >
                                    <TextBox Width="210"
                                             />
                                </RadioButton>
                                <Label Padding="0,0,0,5"  
                                       Content="Answer 4:"
                                   />
                                <RadioButton x:Name="c" 
                                             >
                                    <TextBox Width="210"
                                             />
                                </RadioButton>
                            </StackPanel>
                            <Button Margin="10" 
                                    Width="100" 
                                    Content="Create question" 
                                    />
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Create quiz">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Name="grd_loginscreen">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,120,0,0">
                <TextBox x:Name="tbx_inloggEmail"
                         Margin="10"
                         Height="23"  
                         TextWrapping="Wrap" 
                         Text="Email" 
                         VerticalAlignment="Top" 
                         Width="200"
                         />
                <TextBox x:Name="tbx_login"
                         Margin="10"
                         Height="23"  
                         TextWrapping="Wrap" 
                         Text="Password" 
                         VerticalAlignment="Top" 
                         Width="120"
                         />
            </StackPanel>
            <StackPanel>
                <Button x:Name="btn_login"
                        Margin="0,170,0,0"
                        Content="Login"                       
                        VerticalAlignment="Top" 
                        Width="100"
                        Height="23" Click="btn_login_Click"
                        />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
