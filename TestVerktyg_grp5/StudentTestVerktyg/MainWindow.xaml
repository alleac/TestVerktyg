<Window x:Class="StudentTestVerktyg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentTestVerktyg"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">


    <Window.Resources>
        <DataTemplate x:Key="ListViewQuizTemplate">
            <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Name}" />
                <TextBlock Text=" |  Maxpoints :  " />
                <TextBlock Text="{Binding Path=MaxPoints}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    
    <TabControl x:Name="TabControlStudent">
        <TabItem Header="Quizzes">
    <Grid Background="White" x:Name="QuizGrid">

        

        <StackPanel HorizontalAlignment="Center">

            <Label HorizontalAlignment="Center" 
                                   FontSize="24" 
                                   Content="Quizzes"
                                   />

            <ListView x:Name="lv_QuizList"
                                      Width="400" 
                                      Height="250"
                      ItemsSource="{Binding Path=Quizzes}"
                      ItemTemplate="{StaticResource ListViewQuizTemplate}"
                      SelectedItem="{Binding SelectedQuiz, Mode=TwoWay}"/>
            
            

            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        >

                <Button x:Name="btn_TakeQuiz"
                                        Content="Take Quiz" 
                                        Margin="10" Width="100" 
                                        Height="20" Click="btn_TakeQuiz_Click"
                                        />

            </StackPanel>
        </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Results">
            <Grid>
                
            </Grid>
        </TabItem>
    </TabControl>
</Window>
